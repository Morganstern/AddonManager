<Window x:Class="AddonManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AddonManager"
        mc:Ignorable="d"
        Title="Addon Manager" Height="300.281" Width="421.214">
    <Grid Margin="0,0,2,0">
        <ListBox x:Name="lstBox" HorizontalAlignment="Left" Height="238" VerticalAlignment="Top" Width="262" Margin="10,10,0,0" SelectionChanged="lstBox_SelectionChanged"/>
        <Button x:Name="btnUpdate" Content="Update" HorizontalAlignment="Left" VerticalAlignment="Top" Width="90" Height="30" Margin="299,183,0,0" Click="btnUpdate_Click" RenderTransformOrigin="2.22,-1.9"/>
        <Button x:Name="btnClose" Content="Close" HorizontalAlignment="Left" VerticalAlignment="Top" Width="90" Margin="299,218,0,0" Height="30" Click="btnClose_Click"/>
        <Button x:Name="btnAdd" Content="Add" HorizontalAlignment="Left" VerticalAlignment="Top" Width="90" Height="30" Margin="299,10,0,0" Click="btnAdd_Click"/>
        <Button x:Name="btnRemove" Content="Remove" HorizontalAlignment="Left" VerticalAlignment="Top" Width="90" Height="30" Margin="299,45,0,0" Click="btnRemove_Click" IsEnabled="False"/>
        <ProgressBar x:Name="prgBar" HorizontalAlignment="Left" Height="13" Margin="299,150,0,0" VerticalAlignment="Top" Width="90" IsIndeterminate="True"/>
    </Grid>
</Window>
